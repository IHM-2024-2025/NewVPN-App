<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_account_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Aquí irá el contenido específico de la página de cuenta -->
    <!-- Avatar -->

    <!-- Nombre -->

    <!-- Icono editar -->

    <!-- Email -->

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="66dp"
        android:layout_height="72dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/profile_avatar"
        app:layout_constraintStart_toStartOf="@id/fl_account_header_container"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNombreUsuario"
        android:layout_width="205dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Rodrigo Díaz de Vivar"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/imgEditar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        app:layout_constraintTop_toTopOf="@id/imgAvatar" />

    <!-- Botón cerrar sesión -->

    <!-- Información del plan -->

    <ImageView
        android:id="@+id/imgEditar"
        android:layout_width="41dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtNombreUsuario" />

    <TextView
        android:id="@+id/txtCorreo"
        android:layout_width="216dp"
        android:layout_height="34dp"
        android:text="cid@alu.ubu.es"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/imgEditar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/txtNombreUsuario"
        app:layout_constraintTop_toBottomOf="@id/txtNombreUsuario" />

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="151dp"
        android:layout_height="49dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="4dp"
        android:text="Cerrar sesión"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtCorreo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPlan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnCerrarSesion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tu_plan_actual_plan_normal"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFechaRenovacion"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/fecha_de_renovaci_n_31_12_2025" />

            <TextView
                android:id="@+id/txtPrecio"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/precio_actual_5_al_mes" />

            <Button
                android:id="@+id/btnCancelarSuscripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/cancelar_suscripci_n" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón premium -->

    <Button
        android:id="@+id/btnPremium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="36dp"
        android:drawableStart="@drawable/ic_crown"
        android:text="@string/p_sate_a_premium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardPlan" />

    <FrameLayout
        android:id="@+id/fl_account_menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/volver_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suscribirse"
        android:background="@drawable/color_green_rounded_63ff88"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
