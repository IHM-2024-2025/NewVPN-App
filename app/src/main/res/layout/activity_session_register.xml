<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="394dp"
        android:layout_height="514dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_session_register_terms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Avatar -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutCampos">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Confirmar contraseña"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pt_session_register_password2"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="password"
                android:ems="10"
                android:hint="@string/register_password_label"
                android:inputType="textPassword" />
        </LinearLayout>

        <!-- Icono Editar, reposicionado como overlay -->

        <LinearLayout
            android:id="@+id/layoutCampos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="104dp">

            <!-- Cada fila: etiqueta + campo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Nombre"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pt_session_register_country"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="country"
                    android:ems="10"
                    android:hint="@string/register_country_label"
                    android:inputType="text"
                    android:text="@string/register_name_default" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Apellidos"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pt_session_register_country2"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="country"
                    android:ems="10"
                    android:hint="@string/register_country_label"
                    android:inputType="text"
                    android:text="@string/register_name_default" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Teléfono"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pt_session_register_tlf"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:autofillHints="phone"
                    android:ems="10"
                    android:hint="@string/register_phone_label"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="País"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pt_session_register_country3"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="country"
                    android:ems="10"
                    android:hint="@string/register_country_label"
                    android:inputType="text"
                    android:text="@string/register_name_default" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Email"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pt_session_login_email"
                    android:layout_width="247dp"
                    android:layout_height="wrap_content"
                    android:autofillHints="emailAddress"
                    android:ems="10"
                    android:hint="@string/login_email_label"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Contraseña"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pt_session_register_password2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="password"
                    android:ems="10"
                    android:hint="@string/register_password_label"
                    android:inputType="textPassword" />
            </LinearLayout>

        </LinearLayout>

        <!-- Botón Guardar Cambios -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <CheckBox
        android:id="@+id/cb_session_register_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_accept_terms"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="558dp" />

    <Button
        android:id="@+id/bt_session_register_register"
        android:layout_width="222dp"
        android:layout_height="47dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="16dp"
        android:text="@string/register_button"
        app:layout_constraintBottom_toTopOf="@+id/ll_login_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_session_register_terms" />

    <TextView
        android:id="@+id/tv_session_register_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/register_terms_and_conditions"
        android:textColor="@android:color/holo_blue_dark"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="573dp" />

    <LinearLayout
        android:id="@+id/ll_login_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_session_register_register">

        <TextView
            android:id="@+id/tv_session_register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_account_exists" />

        <TextView
            android:id="@+id/tv_session_register_goto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/register_goto_login"
            android:textColor="@android:color/holo_blue_dark" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
