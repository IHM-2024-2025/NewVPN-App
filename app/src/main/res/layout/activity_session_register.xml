<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_register_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Campo Nombre -->
    <LinearLayout
        android:id="@+id/linearLayout_name"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Nombre"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pt_session_register_name"
            android:layout_width="157dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:autofillHints="name"
            android:background="#E0E0E0"
            android:ems="10"
            android:hint="@string/register_name_label"
            android:inputType="text"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Campo Apellidos -->
    <LinearLayout
        android:id="@+id/linearLayout_lastname"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_name">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Apellidos"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pt_session_register_lastname"
            android:layout_width="157dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:autofillHints="familyName"
            android:background="#E0E0E0"
            android:ems="10"
            android:hint="@string/register_surname_label"
            android:inputType="text"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Campo Teléfono -->
    <LinearLayout
        android:id="@+id/linearLayout_phone"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_lastname">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Teléfono"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pt_session_register_tlf"
            android:layout_width="263dp"
            android:layout_height="48dp"
            android:autofillHints="phone"
            android:background="#E0E0E0"
            android:ems="10"
            android:hint="@string/register_phone_label"
            android:inputType="phone"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Campo Email -->
    <LinearLayout
        android:id="@+id/linearLayout_email"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_phone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Email"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pt_session_login_email"
            android:layout_width="263dp"
            android:layout_height="48dp"
            android:autofillHints="emailAddress"
            android:background="#E0E0E0"
            android:ems="10"
            android:hint="@string/login_email_label"
            android:inputType="textEmailAddress"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Campo País -->
    <LinearLayout
        android:id="@+id/linearLayout_country"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_email">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="País"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pt_session_register_country"
            android:layout_width="157dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:autofillHints="country"
            android:background="#E0E0E0"
            android:ems="10"
            android:hint="@string/register_country_label"
            android:inputType="text"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Campo Contraseña -->
    <LinearLayout
        android:id="@+id/linearLayout_password"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_country">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Contraseña"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pt_session_register_password"
            android:layout_width="263dp"
            android:layout_height="48dp"
            android:autofillHints="password"
            android:background="#E0E0E0"
            android:ems="10"
            android:hint="@string/register_password_label"
            android:inputType="textPassword"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Campo Confirmar contraseña -->
    <LinearLayout
        android:id="@+id/linearLayout_confirm_password"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_password">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Confirmar contraseña"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pt_session_register_confirm_password"
            android:layout_width="263dp"
            android:layout_height="48dp"
            android:autofillHints="password"
            android:background="#E0E0E0"
            android:ems="10"
            android:hint="@string/register_password_label"
            android:inputType="textPassword"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Términos y condiciones -->
    <TextView
        android:id="@+id/tv_session_register_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/register_terms_and_conditions"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/cb_session_register_terms"
        app:layout_constraintStart_toEndOf="@+id/cb_session_register_terms"
        app:layout_constraintTop_toTopOf="@+id/cb_session_register_terms" />

    <CheckBox
        android:id="@+id/cb_session_register_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:text="@string/register_accept_terms"
        app:layout_constraintEnd_toStartOf="@+id/tv_session_register_terms"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_confirm_password" />

    <!-- Botón de registro -->
    <Button
        android:id="@+id/bt_session_register_register"
        android:layout_width="222dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="@string/register_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_session_register_terms" />

    <!-- Enlace a inicio de sesión -->
    <LinearLayout
        android:id="@+id/ll_login_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_session_register_register"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tv_session_register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_account_exists" />

        <TextView
            android:id="@+id/tv_session_register_goto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/register_goto_login"
            android:textColor="@android:color/holo_blue_dark" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
