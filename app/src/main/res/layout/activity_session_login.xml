<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".session.LoginPage">

    <FrameLayout
        android:id="@+id/fl_login_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_session_login_bg"
        android:layout_width="0dp"
        android:layout_height="470dp"
        android:contentDescription="@string/login_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/color_pink_ffc2f4" />

    <TextView
        android:id="@+id/tv_session_login_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/pt_session_login_email"
        android:text="@string/login_email_label"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/pt_session_login_email"
        app:layout_constraintStart_toStartOf="@+id/pt_session_login_email" />

    <EditText
        android:id="@+id/pt_session_login_email"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:autofillHints="emailAddress"
        android:background="#E0E0E0"
        android:ems="10"
        android:hint="@string/login_email_label"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_session_login_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_session_login_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24" />

    <TextView
        android:id="@+id/tv_session_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/pt_session_login_password"
        android:text="@string/login_password_label"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/pt_session_login_password"
        app:layout_constraintStart_toStartOf="@+id/pt_session_login_password" />

    <EditText
        android:id="@+id/pt_session_login_password"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:autofillHints="password"
        android:background="#E0E0E0"
        android:ems="10"
        android:hint="@string/login_password_label"
        android:inputType="textPassword"
        android:padding="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pt_session_login_email" />

    <TextView
        android:id="@+id/tv_session_login_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_forgot_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

    <TextView
        android:id="@+id/tv_session_login_goto_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_register"
        android:textColor="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.708"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_session_login_login"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:id="@+id/tv_session_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_no_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_session_login_login"
        app:layout_constraintVertical_bias="0.037" />

    <Button
        android:id="@+id/bt_session_login_login"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="-25dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="@string/login_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_session_login_bg"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
